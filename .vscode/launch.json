{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch BackendApiApplication",
            "request": "launch",
            "mainClass": "com.churninsight_dev.backend_api.BackendApiApplication",
            "projectName": "backend-api",
            "cwd": "${workspaceFolder}/backend-api",
            "preLaunchTask": "build",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "vmArgs": "-Dspring.profiles.active=dev"
        },
        {
            "type": "java",
            "name": "Debug BackendApiApplication",
            "request": "launch",
            "mainClass": "com.churninsight_dev.backend_api.BackendApiApplication",
            "projectName": "backend-api",
            "cwd": "${workspaceFolder}/backend-api",
            "preLaunchTask": "build",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "vmArgs": "-Dspring.profiles.active=dev -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5005"
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        }
    ]
}
